<%include('./partials/header')%>
<head>
    <title>Create Account</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Roboto:wght@100..900&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex flex-col justify-center items-center bg-gradient-to-r from-cyan-700 via-cyan-400 to-cyan-200 font-['Inter']">
    
    <div class="absolute top-6 right-7 text-white underline underline-offset-4 cursor-pointer">
        <a href="/login" class="font-medium">Log In</a>
    </div>

    <div class="bg-cyan-600 w-[540px] p-8 rounded-lg shadow-lg flex flex-col items-center">
        <h1 class="text-white text-3xl font-bold mb-6 font-['Roboto'] tracking-wide">CREATE AN ACCOUNT</h1>

        <form action="/users/create" method="POST" class="w-full max-w-xs space-y-4 text-white">
            <div>
                <label for="name" class="block mb-1 text-sm font-medium">Full Name</label>
                <input type="text" id="name" name="name" class="w-full px-3 py-2 text-black rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-cyan-400">
            </div>
            <div>
                <label for="email" class="block mb-1 text-sm font-medium">Enter Your Email</label>
                <input type="email" id="email" name="email" class="w-full px-3 py-2 text-black rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-cyan-400">
            </div>
            <div>
                <label for="password" class="block mb-1 text-sm font-medium">Enter Your Password</label>
                <input type="password" id="password" name="password" class="w-full px-3 py-2 text-black rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-cyan-400">
            </div>
            <div>
                <label for="re-password" class="block mb-1 text-sm font-medium">Confirm Your Password</label>
                <input type="password" id="re-password" name="re-password" class="w-full px-3 py-2 text-black rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-cyan-400">
            </div>

            <button type="submit" class="w-full mt-4 bg-cyan-800 text-white font-semibold py-2 px-4 rounded hover:bg-cyan-900 transition-all">CREATE AN ACCOUNT</button>
        </form>
    </div>

    <script src="/script.js"></script>
</body>
<%include('./partials/footer')%>