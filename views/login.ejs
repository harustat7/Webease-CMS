<%-include('./partials/header') %>
<head>
  <title>Login</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Roboto:wght@400;600&display=swap" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-cyan-700 to-cyan-400 min-h-screen flex justify-center items-center font-['Inter']">

  <!-- Top-right Create Account -->
  <div class="absolute top-6 right-7 text-white underline underline-offset-4 cursor-pointer">
    <a href="/create" class="font-medium">Create An Account</a>
</div>

  <!-- Login Card -->
  <div class="bg-cyan-600 rounded-md w-[90%] max-w-md p-8 flex flex-col items-center">
    <h1 class="text-white text-3xl font-semibold font-['Roboto'] tracking-wide mb-6">LOGIN</h1>

    <div class="w-full space-y-6 mb-4">
      <form autocomplete="off" action="/users/login" method="POST">
      <div>
        <h3 class="text-white text-base font-medium mb-1">Enter Your Email</h3>
        <input type="email" id="email" name="email" autocomplete="email" required class="w-full p-2 rounded border border-white/20 focus:outline-none focus:ring-2 focus:ring-white"/>
      </div>

      <div>
        <h3 class="text-white text-base font-medium mb-1">Enter Your Password</h3>
        <input type="password" id="password" name="password" autocomplete="current-password" required class="w-full p-2 rounded border border-white/20 focus:outline-none focus:ring-2 focus:ring-white"/>
      </div>
    </div>

    <button id="login" name="login" class="bg-cyan-800 text-white w-full py-2 rounded hover:bg-cyan-900 transition-all duration-200 font-medium">LOGIN</button>
  </form>
    <h4 class="text-white mt-4 text-sm font-normal text-center cursor-pointer">Forgot Password?</h4>
  </div>
</body>

<%-include('./partials/footer')%>
